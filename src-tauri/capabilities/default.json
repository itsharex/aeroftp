{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "AeroFTP default capabilities",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "notification:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-stat",
    "fs:read-all",
    "fs:write-all",
    "log:default",
    "core:path:default",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ],
  "remote": {
    "urls": [
      "asset://localhost/*",
      "http://localhost:14321/*"
    ]
  }
}