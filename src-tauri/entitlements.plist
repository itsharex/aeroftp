<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Enable App Sandbox (Required for Mac App Store) -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Network Client Permission - Required for FTP connections -->
  <key>com.apple.security.network.client</key>
  <true/>

  <!-- Network Server Permission - May be needed for some FTP operations -->
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- File System Access - User selected files (Downloads/Documents) -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>

  <!-- Optional: Allow reading specific directories -->
  <!-- Uncomment if you want to grant access to Downloads folder -->
  <!--
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>
  -->

  <!-- Optional: Allow reading documents -->
  <!--
  <key>com.apple.security.files.documents.read-write</key>
  <true/>
  -->

  <!-- Outgoing Network Connections (for all remote servers) -->
  <key>com.apple.security.network.outgoing</key>
  <true/>
</dict>
</plist>
