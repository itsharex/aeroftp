{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "AeroFTP",
    "version": "1.3.4",
    "identifier": "com.aeroftp.AeroFTP",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "AeroFTP",
                "width": 1440,
                "height": 1000,
                "minWidth": 1024,
                "minHeight": 800,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; connect-src 'self' https://cdn.jsdelivr.net https://unpkg.com https://*.googleapis.com https://*.dropboxapi.com https://graph.microsoft.com https://login.microsoftonline.com; img-src 'self' asset: https://asset.localhost data: blob:; media-src 'self' asset: https://asset.localhost blob:; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com; font-src 'self' data: https://cdn.jsdelivr.net; worker-src 'self' blob:",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$HOME/**",
                    "/var/**",
                    "/home/**",
                    "/tmp/**",
                    "/**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "shortDescription": "Modern FTP Client",
        "longDescription": "AeroFTP is a fast, beautiful, and reliable FTP client built with Rust and React. Features include dual-pane file browser, drag & drop transfers, AI-powered assistant, integrated terminal, and code editor with syntax highlighting.",
        "category": "Utility",
        "copyright": "Copyright Â© 2025 axpdev",
        "license": "MIT",
        "licenseFile": "../LICENSE",
        "windows": {
            "wix": {
                "bannerPath": "installer/banner.bmp",
                "dialogImagePath": "installer/dialog.bmp"
            },
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "headerImage": "installer/header.bmp",
                "sidebarImage": "installer/sidebar.bmp"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": true,
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyMTBCNkI2QzhDM0E2RjkKUldUNXBzUEl0cllROHVDbmdiTHNMQnRHOHI4amVyaUlVSFhTSjZJMEJwZXVhbFI4OVhiV2hZSzEK",
            "endpoints": [
                "https://api.github.com/repos/axpnet/aeroftp/releases/latest"
            ]
        }
    }
}